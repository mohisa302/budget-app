<div class="flex px-2 py-8 text-white justify-center background items-center h-10 px-4 w-full">
    <h1 class="ml-4 text-center background text-2xl">Register</h1>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, class:"form-label" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full name", class:"border form-input" %>
  </div>

  <div class="field">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"border form-input" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"form-label" %>
    <% if @minimum_password_length %>
    <em class="mx-2">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class:"border form-input"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:"mx-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", class:"border form-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"bg-blue-200 shadow-md w-full focus:outline-none my-4 bg-white hover:bg-blue-500 text-blue-900 font-semibold hover:text-white py-2 px-4 block border rounded" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
