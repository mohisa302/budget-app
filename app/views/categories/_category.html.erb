<%= link_to category_expenses_path(category), class: "category-card" do %>
  <div class="category-details my-4 flex flex-col bg-white py-2 px-2 category-card items-center justify-center">
    <div class="flex justify-between w-screen px-2">
      <div>
        <% if File.exist?(Rails.root.join('app', 'assets', 'images', "#{category.icon}.png").to_s) %>
          <%= image_tag "#{category.icon}.png", height: '50px', width: '50px' %>
        <% else %>
          <%= image_tag category.icon, height: '50px', width: '50px' %>
        <% end %>
      </div>
      <div class="flex flex-col justify-between margin">
        <h4 class="text-gray-500"><%= category.name %></h4>
        <h4 class="text-gray-500"><%= category.created_at.strftime('%B %d, %Y')  %></h4>
      </div>
      <div class="text-gray-800"><%=  controller.total_amount_for_category(category) %> $</div>
  </div>
  <div class="my-4 self-center">
    <% if category.author_id == current_user.id %>
    <%= button_to 'Delete', category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class:"bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4" %>
    <% end %>
  </div>
</div>
<% end %>
