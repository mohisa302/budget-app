<div class="text-white h-screen">
  <div class="flex py-8 justify-between background items-center h-10 px-4 w-full">
    <svg class="h-8 w-8 text-white"  fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
    </svg>
    <h1 class="text-center background text-2xl">Expenses for <%= @category.name %></h1>
    <svg class="h-8 w-8 text-white"  fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
    </svg>
</div>
<% if @expenses.any? %>
  <div class="categories-list flex flex-col justify-center bg-slate-100 items-center w-screen">
  <div class="bg-white category-card overflow-auto py-4 flex justify-between">
    <p class="text-gray-500">Total amount: </p>
    <p class="text-gray-800"><%=  @total_expense %> $</p>
  </div>
<% puts "@expenses count before rendering: #{@expenses.count}" %>
<% @expenses.each do |expense| %>
  <%= render 'expense', expense: expense, category: @category %>
<% end %>
<% puts "@expenses count after rendering: #{@expenses.count}" %>
  
</div>
<% else %>
<p>No expenses found.</p>
<% end %>
  <a href="<%= new_category_expense_path(@category) %>" class="my-4 shadow-md  bg-blue-200 hover:bg-blue-500 text-blue-900 w-screen font-semibold hover:text-white py-2 px-4 block border rounded">
    <button class="w-full focus:outline-none">Add a new Expense</button>
  </a>
    <a href="<%=  user_categories_path(current_user) %>" class="shadow-md w-full focus:outline-none my-2 bg-white hover:bg-red-500 text-red-900 font-semibold hover:text-white py-2 px-4 block border rounded">
    <button class="w-full focus:outline-none">Back</button>
  </a>
</div>
</div>
